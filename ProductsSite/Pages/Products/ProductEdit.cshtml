@page
@model ProductsSite.ProductEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
@if (!Model.ModelState.IsValid)
{
    foreach (var state in (Model.ModelState.Values))
    {
        foreach (var error in state.Errors)
        {
            <div>@error.ErrorMessage</div>
        }
    }
}
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product!.Id" />
            <div class="form-group">
                <label asp-for="Product.ProductType" class="control-label"></label>
                <input asp-for="Product.ProductType" class="form-control" />
                <span asp-validation-for="Product.ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.PriceInput" type="number" class="form-control" />
                <span asp-validation-for="Product.PriceInput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductDate" class="control-label"></label>
                <input asp-for="Product.ProductDate" class="form-control" />
                <span asp-validation-for="Product.ProductDate" class="text-danger"></span>
            </div>
            <dl>
                <dt>

                </dt>
                <dd>
                    <input type="file" name="pic">
                </dd>
                <dd>
                    <label>@Html.CheckBoxFor(model => Model.Product.OnPreview) </label>
                </dd>
            </dl>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Products/ProductIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

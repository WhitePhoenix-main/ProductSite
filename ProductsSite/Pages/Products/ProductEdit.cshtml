@page
@using Microsoft.EntityFrameworkCore
@model ProductsSite.ProductEditModel
@inject ProductsSite.ProductsSiteContext _context
<link rel="stylesheet" href="/css/ProductEditPage.css" asp-append-version="true">
@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование карточки товара</h1>
@if (!Model.ModelState.IsValid)
{
    foreach (var state in (Model.ModelState.Values))
    {
        foreach (var error in state.Errors)
        {
            <div>@error.ErrorMessage</div>
        }
    }
}
<div class="row">
    <div class="col-md-4 p-2">
        <div class="main-edit shadow">
            <div class="title-block p-1">
                <i class="bi bi-gear ms-1"></i>
                <span>Основные</span>
            </div>
            <div class="category-settings m-2">
                <form method="post">
                    <div class="form-group">
                        @*Спросить про id hidden*@
                        <label>Идентификатор товара</label>
                        <input asp-for="ProductId" type="hidden"/>
                        <span> @Model.ProductId" </span> 
                    </div>
                    <div class="form-group">
                        @*TODO: Добавить добавление новой категории товара*@
                        <label>Категория товара</label>
                        <input asp-for="ProductCategory" class="form-control"/>
                        <span asp-validation-for="ProductCategory" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Название товара</label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Цена</label>
                        <input asp-for="ProductPrice" class="form-control"/>
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Горячее предложение</label>
                        <input type="checkbox" asp-for="ProductHotDeal"/>
                    </div>
                    <div class="form-group">
                        <label>Есть скидка?</label>
                        <input type="checkbox" asp-for="ProductIsDiscount"/>
                    </div>
                    <div class="form-group">
                        <label>Скидка в процентах</label>
                        <input asp-for="ProductDiscountPercent" class="form-control"/>
                        <span asp-validation-for="ProductDiscountPercent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4 p-2">
        <div class="category-edit shadow">
            <div class="title-block p-1">
                <i class="bi bi-list"></i>
                <span>Количество</span>
            </div>
            <div class="category-settings m-2">
                <form method="post" asp-page-handler="SetQuantity">
                    <input asp-for="ProductId" type="hidden"/>
                    <div class="form-group">
                        <label>Количество товара</label>
                        <input asp-for="ProductQuantity" class="form-control"/>
                        <span asp-validation-for="ProductQuantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4 p-2">
        <div class="category-edit shadow">
            <div class="title-block p-1">
                <i class="bi bi-list"></i>
                <span>Описание товара</span>
            </div>
            <div class="category-settings m-2">
                <form method="post" asp-page-handler="SetQuantity">
                    <input asp-for="ProductId" type="hidden"/>
                    <div class="form-group">
                        <label>Описание товара</label>

                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>

<div>
    <a asp-page="/Products/ProductIndex">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}